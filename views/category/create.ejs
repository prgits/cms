<% layout('../layouts/default') %>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Categories</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form role="form" method="POST" action="/category/create">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Name</label>
                                    <input name="name" class="form-control" placeholder="Enter category name ...">
                                </div>
                                <div class="col-md-6">
                                    <label>Icon</label>
                                    <input name="icon" class="form-control" placeholder="Enter class icon ...">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Parent</label>
                                    <select name="parent_id" class="form-control">
                                        <option value="">Parent</option>
                                        <%parent.forEach(function (p) {%>
                                        <option value="<%=p.id%>"><%=p.name%></option>
                                        <%});%>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-4">
                                    <label>Type</label>
                                    <select name="type" class="form-control">
                                        <option value="1">Post</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-default">Submit Button</button>
                        <button type="reset" class="btn btn-default">Reset Button</button>
                    </form>
                </div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->